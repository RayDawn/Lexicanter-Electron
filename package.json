{
  "name": "lexicanter",
  "productName": "Lexicanter",
  "version": "2.0.0",
  "description": "A lexicon management tool for constructed languages.",
  "main": "src/index.js",
  "scripts": {
    "precompile": "sass src/sass/:src/styles && rollup -c",
    "start": "npm run precompile && electron .",
    "build-mac": "npm run precompile && electron-builder --mac --publish never",
    "build-win": "npm run precompile && electron-builder --win --publish never",
    "publish": "npm run precompile && bash bash/publish.bash",
    "check": "svelte-check --tsconfig ./tsconfig.json"
  },
  "repository": "https://github.com/Saturnine-Softworks/Lexicanter",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "build": {
    "appId": "com.lexicanter.app",
    "productName": "Lexicanter",
    "win": {
      "target": "nsis",
      "icon": "src/rsrc/Quill Icon.ico"
    },
    "mac": {
      "icon": "src/rsrc/Quill Icon.icns"
    },
    "nsis": {
      "installerIcon": "src/rsrc/Quill Icon.ico",
      "installerHeaderIcon": "src/rsrc/Quill Icon.ico"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "src/rsrc"
    }
  },
  "keywords": [],
  "author": {
    "name": "Ethan Ray"
  },
  "license": "GNU General Public License Version 3",
  "dependencies": {
    "@editorjs/code": "^2.8.0",
    "@editorjs/editorjs": "^2.26.4",
    "@editorjs/header": "^2.7.0",
    "@editorjs/paragraph": "^2.9.0",
    "@editorjs/table": "^2.2.0",
    "@editorjs/underline": "^1.1.0",
    "electron-updater": "^5.3.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.4",
    "@rollup/plugin-commonjs": "^17.0.0",
    "@rollup/plugin-node-resolve": "^11.0.0",
    "@rollup/plugin-typescript": "^8.0.0",
    "@tsconfig/svelte": "^2.0.0",
    "@types/node": "^18.13.0",
    "@types/wicg-file-system-access": "^2020.9.5",
    "electron": "^22.2.0",
    "electron-builder": "^22.10.3",
    "rollup": "^2.3.4",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^7.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.55.1",
    "svelte-check": "^2.0.0",
    "svelte-preprocess": "^4.0.0",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0"
  }
}
